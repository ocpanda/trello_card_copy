{
  "manifest_version": 3,
  "name": "trello_card_copy",
  "description": "This extension allows you to easily copy the title and link of a Trello detail card.",
  "version": "1.0.0",
  "icons": {
    "128": "128.png",
    "16": "16.png",
    "48": "48.png"
  },
  "content_scripts" : [
    {
      "matches" : [ "https://trello.com/*" ],
      "js" : [
        "index.js"
      ]
    }
  ],
  "permissions": [
    "clipboardWrite"
  ]
}
